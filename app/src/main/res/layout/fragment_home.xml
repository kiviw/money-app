<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btn_video_watch"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Watch Video"
            tools:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_daily_earn"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Daily Earn"
            tools:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_web_view"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Webview"
            tools:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_scratch"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Scratch"
            tools:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_slot"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Slot"
            tools:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_spin"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:text="Spin"
            tools:srcCompat="@drawable/ic_home" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Refresh Ad" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>